# The universal config directory, containing the configuration files for every service of Wywy-Website. Must be an absolute path.
UNIVERSAL_CONFIG_DIR=/etc/Wywy-Website-Control/config

# SQL receptionist verbosity
# TRUE/FALSE
SQL_RECEPTIONIST_LOG_QUERIES=TRUE
SQL_RECEPTIONIST_LOG_INPUT=TRUE
SQL_RECEPTIONIST_LOG_ENDPOINT_TRIGGERS=TRUE
SQL_RECEPTIONIST_LOG_RESPONSES=TRUE
SQL_RECEPTIONIST_LOG_SCHEMA_FAILURES=FALSE

# Authentication cookie max age in seconds.
# 1h = 3600
# 1d = 86400
# 30d = 2592000
# 1y = 31536000
AUTH_COOKIE_MAX_AGE=2592000

# Backup server hostname, user, and password
BACKUP_SERVER_HOST=wywywebsite_backup
BACKUP_SERVER_USER=ftpuser
BACKUP_SERVER_PASSWORD=w

# The port of the Postgres database.
DATABASE_PORT=5432

# Postgres password. You should change it to a random password.
# Please only use alphanumerical (a-Z, 0-9) characters; no special characters, no spaces.

DATABASE_PASSWORD=password

# The values below this line do not need to be changed.
###################################################################################
DATABASE_HOST=wywywebsite_postgres
DATABASE_USERNAME=postgres