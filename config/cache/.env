# START - Sync app
# Schema check verbosity.
# 0 - does not print anything if a non-conforming request is received.
# 1 - @TODO prints error message if a non-conforming request is received.
SCHEMA_CHECK_VERBOSITY=0

# Sync verbosity.
# 0 - does not print anything
# 1 - prints the amount of entries that succeeded to sync and the number of entries that failed to sync.
# 2 - prints the info/sync_status entries of every entry that failed to sync.
SYNC_VERBOSITY=1

# The port to run the Django server on.
SYNC_PORT=8000

# Authentication cookie max age in seconds.
# 1h = 3600
# 1d = 86400
# 30d = 2592000
# 1y = 31536000
AUTH_COOKIE_MAX_AGE=2592000

# END - Sync app

# The port of the Postgres database.
DATABASE_PORT=5433

# Postgres password. You should change it to a random password.
# Please only use alphanumerical (a-Z, 0-9) characters; no special characters, no spaces.

DATABASE_PASSWORD=password

# The values below this line do not need to be changed.
###################################################################################
DATABASE_HOST=wywywebsite-cache_postgres
DATABASE_USERNAME=postgres